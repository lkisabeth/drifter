target 'Drifter' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Drifter
  pod 'Firebase'
  pod 'FirebaseUI'
  pod 'SVProgressHUD'
  pod 'ChameleonFramework'
  pod 'Fabric'
  pod 'BFTransmitter'

  target 'DrifterTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'DrifterUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
